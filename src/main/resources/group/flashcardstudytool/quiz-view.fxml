<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="group.flashcardstudytool.controllers.QuizController"
      spacing="15" alignment="CENTER" style="-fx-background-color: #f0f0f0;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Quiz Mode" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <Label fx:id="questionLabel" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <TextField fx:id="answerField" promptText="Your answer" prefWidth="300"/>

    <Button fx:id="submitButton" text="Submit Answer" onAction="#submitAnswer"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>

    <Label fx:id="resultLabel" style="-fx-font-size: 16;"/>
</VBox>